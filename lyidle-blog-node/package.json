{
  "name": "lyidle-blog-node",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build:re": "rimraf dist",
    "build:tsc": "tsc && tsc-alias",
    "build:move": "copyfiles -u 1 src/**/*.* dist/src --exclude \"**/*.ts\" && copyfiles package.json pnpm-lock.yaml .sequelizerc .env build.js dist",
    "build:handler": "cd dist && node build.js && rimraf build.js && cd ../",
    "build:minify": "node minify.js",
    "build": "pnpm build:re && pnpm build:tsc && pnpm build:move && pnpm build:handler && pnpm build:minify",
    "api": "node dist/src/app.js",
    "web": "node dist/src/web.js",
    "start": "concurrently \"pnpm api\" \"pnpm web\"",
    "apiDev": "tsnd -r tsconfig-paths/register --respawn src/app.ts",
    "webDev": "tsnd -r tsconfig-paths/register --respawn src/web.ts",
    "dev": "concurrently \"pnpm apiDev\" \"pnpm webDev\"",
    "db:undo": "sequelize db:migrate:undo",
    "db:undo:all": "sequelize db:migrate:undo:all",
    "db:up": "sequelize db:migrate",
    "db:seed": "sequelize db:seed",
    "db:seed:all": "sequelize db:seed:all",
    "migrate:create": "sequelize migration:generate --name",
    "seed:create": "sequelize seed:generate --name",
    "db:restore": "pnpm db:undo:all && pnpm db:up && pnpm db:seed:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "concurrently": "^9.1.0",
    "connect-history-api-fallback": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "device-detector-js": "^3.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-jwt": "^8.5.1",
    "ip": "^2.0.1",
    "ip2region": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "mysql2": "^3.11.5",
    "nodemailer": "^6.9.16",
    "sequelize": "^6.37.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "copyfiles": "^2.4.1",
    "rimraf": "^6.0.1",
    "terser": "^5.37.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "_moduleAliases": {
    "@": "src"
  }
}
